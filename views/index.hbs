        </div>

        <div class = "forecast__container">
            <div  class = "weather__container">
                <p class = "forecast__day"></p>
                <p class = "location"></p>
                <p class = "temp"></p>
            </div>
        </div>

        <div class = "forecast__container">
            <div  class = "weather__container">
                <p class = "forecast__day"></p>
                <p class = "location"></p>
                <p class = "temp"></p>
            </div>
        </div>
    </div>
    <table class = "optional_table" border="1">
        <tr class = "main_table_titles">
            <th>Day of week</th>
            <th>Min temp</th>
            <th>Max temp</th>
            <th>Wind speed</th>
            <th>Average humidity</th>
        </tr>

    <tr class = "row_day_week">
        <td class = "day_week"></td>
        <td class = "min_temp"></td>
        <td class = "max_temp"></td>
        <td class = "win_speed"></td>
